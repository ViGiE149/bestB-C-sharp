@model IEnumerable<bestbrigh.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Inventory</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bestbrigh.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa; /* Light grey background */
            font-family: Arial, sans-serif;
        }

        h1 {
            color: green; /* Blue header color */
            margin-bottom: 20px;
        }

        .btn {
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .btn-primary {
            background-color: green; /* Blue button background */
            border-color:green;
        }

            .btn-primary:hover {
                transform: translateY(-2px); /* Lift button on hover */
                box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
            }

        .table {
            background-color: #fff; /* White background for table */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .table th,
            .table td {
                vertical-align: middle;
            }

            .table thead {
                background-color: green; /* Blue header background */
                color: #fff; /* White text color */
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 123, 255, 0.05); /* Light blue striped rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1); /* Darker blue on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Inventory</h1>
        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Add New Product</a>
        </p>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>SKU</th>
                    <th>Stock Level</th>
                    <th>Price</th>
                    <th>Created At</th>
                    <th>Threshold</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.SKU</td>
                        <td>@item.StockLevel</td>
                        <td>@item.Price</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.Threshold</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-secondary">Edit</a>
                            <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
