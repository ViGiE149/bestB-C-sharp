@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Best Brightness Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bestbrigh.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa; /* Light grey background */
            font-family: Arial, sans-serif;
            background-color: #FFDB58;
        }

        .card {
            border: none;
            background-color: #fff; /* White background for cards */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px); /* Lift card on hover */
                box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
            }

        .card-title {
            color: #007bff; /* Blue title color */
        }

        .card-text {
            color: #6c757d; /* Grey text color */
        }

        .btn {
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .btn-primary {
            background-color: #007bff; /* Blue button background */
            border-color: #007bff;
        }

            .btn-primary:hover {
                transform: translateY(-2px); /* Lift button on hover */
                box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Welcome, @ViewData["Username"]!</h2>
        <h4>Best Brightness Dashboard</h4>
        <div class="row mt-4">
            @if (ViewData["Role"].ToString() == "Salesperson" || ViewData["Role"].ToString() == "Admin")
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-primary">
                        <div class="card-body">
                            <h5 class="card-title">Sales</h5>
                            <p class="card-text">Manage sales and record transactions.</p>
                            <a href="@Url.Action("Index", "Sales")" class="btn btn-primary">Go to Sales</a>
                        </div>
                    </div>
                </div>
            }
            @if (ViewData["Role"].ToString() == "Admin")
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-success">
                        <div class="card-body">
                            <h5 class="card-title">Inventory</h5>
                            <p class="card-text">Manage product inventory and stock levels.</p>
                            <a href="@Url.Action("Index", "Inventory")" class="btn btn-success">Go to Inventory</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-info">
                        <div class="card-body">
                            <h5 class="card-title">Reports</h5>
                            <p class="card-text">View and download sales and inventory reports.</p>
                            <a href="@Url.Action("Index", "Reports")" class="btn btn-info">Go to Reports</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-warning">
                        <div class="card-body">
                            <h5 class="card-title">User Management</h5>
                            <p class="card-text">Manage system users and roles.</p>
                            <a href="@Url.Action("Index", "Users")" class="btn btn-warning">Go to User Management</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
